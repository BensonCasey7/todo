.text-center.home-header
  = render 'greeting'
.container
  .row
    .col-md-4.home-col
      .home-col-header Lists
      ul.list-unstyled.home-lists-list
        - current_user.top_lists.each do |list|
          = link_to list_items_path(list) do
            li = list.name
        - if current_user.lists.count > 5
          = link_to lists_path do
            li.action-list View all lists...
        = link_to new_list_path do
          li.action-list Create new list
    .col-md-4.home-col
      .home-col-header High Priority
      ul.list-unstyled.home-lists-list
        - current_user.high_priority.each do |item|
          = link_to list_item_path(item.list, item) do
            li = item.content
    .col-md-4.home-col
      .home-col-header Due Soon
      i.text-muted Coming soon
